<Window x:Class="GitProjectManager.Frontend.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GitProjectManager.Frontend.WpfApp"
        xmlns:viewModel="clr-namespace:GitProjectManager.Frontend.WpfApp.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        Background="Transparent"
        AllowsTransparency="False">

  <Window.DataContext>
    <viewModel:MainViewModel/>
  </Window.DataContext>  
  
  <Border Background="#272637"
          CornerRadius="5">
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="200"/>
        <ColumnDefinition/>
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition Height="75"/>
        <RowDefinition/>
      </Grid.RowDefinitions>
      <TextBlock Text="Code Witch"
               VerticalAlignment="Center"
               HorizontalAlignment="Left"
               Foreground="White"
               FontSize="22"
               Margin="20,0,0,0"/>
      
      <TabPanel Grid.Column="2" >

        <RadioButton Content="Repository"
                     Height="50"
                     Foreground="White"
                     FontSize="20"
                     Style="{StaticResource MenuButtonTheme}"
                     IsChecked="True"
                     Command="{Binding DiscoveryViewCommand}"/>

        <RadioButton Content="Board"
                     Height="50"
                     Foreground="White"
                     FontSize="20"
                     Style="{StaticResource MenuButtonTheme}"
                     Command="{Binding BoardViewCommand}"/>

        <RadioButton Content="Projects"
                     Height="50"
                     Foreground="White"
                     FontSize="20"
                     Style="{StaticResource MenuButtonTheme}"/>

      </TabPanel>

      <TextBox
        Width="250"
        Height="40"
        VerticalContentAlignment="Center"
        HorizontalAlignment="Left"
        Grid.Row="1"
        Grid.Column="0"
        Margin="5"
        Style="{StaticResource ModernTextBox}"/>

      <ContentControl Grid.Row="1"
                      Grid.Column="1"
                      Margin="10"
                      Content="{Binding CurrentView}">
        
      </ContentControl>
    </Grid>


  </Border>
</Window>
